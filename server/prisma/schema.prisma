generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique 
  username      String  @unique 
  firstName      String
  lastName      String
  auth          Authentication
  address       Address
  phoneNum      String?
  uniqueOrgCode String
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt
}

type Authentication {
  password     String
  salt         String
  sessionToken String
}

type Address {
  street  String
  city    String
  state   String
  zip     String
  country String
}
